{
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#ffffff",
    "titleBar.inactiveForeground": "#ffffffcc",
    "titleBar.activeBackground": "#7300b6e7",
    "titleBar.inactiveBackground": "#350053e7",
    "errorLens.infoForeground": "#006274",
    "errorLens.infoBackground": "#00506841",
    "editorInfo.foreground": "#00d9ff"
  },

  "search.exclude": {
    "**/dist": true
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "prettier.useTabs": false,
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.organizeImports": false,
    "source.fixAll.eslint": false,
    "source.fixAll.tslint": false,
    "source.fixAll.stylelint": false
  },
  "editor.wordWrap": "on",
  "cSpell.enabled": true,
  "cSpell.language": "en,pt,pt-BR",
  "cSpell.words": [],
  "cSpell.ignoreRegExpList": ["\\@\\w+", "/import(.*)'/g"],
  "cSpell.diagnosticLevel": "Information",
  "errorLens.messageBackgroundMode": "line"
}
